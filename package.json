{
  "name": "@badgateway/smash-api",
  "version": "2.0.0",
  "description": "API for smash ladder",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint",
    "serve": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/smash-ladder/back.git"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/smash-ladder/back/issues"
  },
  "homepage": "https://github.com/smash-ladder/back#readme",
  "devDependencies": {
    "@types/koa": "^2.11.6",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "@types/marked": "^1.2.1",
    "@types/node": "^12.19.15",
    "@types/nodemailer": "^6.4.0",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.7",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "highlight.js": "^10.5.0",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.0.0",
    "marked": "^2.0.0",
    "mysql2": "^2.2.5",
    "nodemailer": "^6.4.17"
  }
}
